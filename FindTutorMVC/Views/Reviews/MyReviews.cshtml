@model IEnumerable<FindTutorMVC.Models.Review>
@using Microsoft.AspNet.Identity
@using FindTutorMVC.Models

@{
    ViewBag.Title = "MyReviews";
}

<h3>Saved reviews</h3>
<br />
<table class="table table-hover" id="reviewsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Announcement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Announcements/Details/@item.Announcement.Id" style="cursor: pointer; text-decoration: none">
                        @Html.DisplayFor(modelItem => item.Announcement.Title)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
            </tr>
        }
    </tbody>
</table>



@section scripts{
    <script>
        var table = $("#reviewsTable").DataTable();
    </script>
}
