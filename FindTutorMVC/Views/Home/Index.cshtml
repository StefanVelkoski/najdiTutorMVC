@{
    ViewBag.Title = "Home Page";
}

<style>
    .carousel-inner img {
        width: 100%;
        min-height: 200px;
    }

    @@media (max-width: 600px) {
        .carousel-caption {
            display: none;
        }
    }
</style>

<body>


    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="https://images.unsplash.com/photo-1500989145603-8e7ef71d639e?ixid=MXwxMjA3fDB8MHxzZWFyY2h8M3x8c3R1ZHlpbmd8ZW58MHx8MHw%3D&amp;ixlib=rb-1.2.1&amp;w=1000&amp;q=8" alt="Image" style="max-height:700px; min-height:700px">
                <div class="carousel-caption">
                    <h1>FindTutor</h1>
                    <p>The online classroom that will help you find your ideal tutor!</p>
                </div>
            </div>

            <div class="item">
                <img src="https://cdn.kinsights.com/cache/db/d9/dbd9cd6496ae9eb83e23399938410d38.jpg" alt="Image" style="max-height:700px; min-height:700px">
                <div class="carousel-caption">
                    <h1>Pass your exams with the help of a tutor</h1>
                    <p>Our platform enables you to find the perfect tutor to help you pass your upcoming exam, or chase your dreams learning what  you are passionate about</p>
                </div>
            </div>




        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container text-center">
        <h3>Choose a category in which you want to develop your knowledge!</h3><br>
        <div class="row">
            <a>
                <div class="col-sm-4">
                    <img href="/" src="https://loveearthwec.org/wp-content/uploads/2018/06/ARTStyles.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                    <p>Arts</p>
                </div>
            </a>
            <a>
                <div class="col-sm-4">
                    <img src="https://wallpaperaccess.com/full/1260521.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                    <p>Languages</p>
                </div>
            </a>
            <a>
                <div class="col-sm-4">
                    <img src="https://miro.medium.com/max/7296/1*deC-mkFzjrzBPL5qEnx-FA.jpeg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                    <p>Maths</p>

                </div>
            </a>
        </div>
        <div class="row">
            <a>
                <div class="col-sm-4">
                    <img src="https://wallpaperaccess.com/full/1428481.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                    <p>Computer Science</p>
                </div>
            </a>
            <a>
                <div class="col-sm-4">
                    <img src="https://www.mural-wallpaper.com/wp-content/uploads/2019/06/A-M25.jpeg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                    <p>Music</p>
                </div>
            </a>
            <a>
                <div class="col-sm-4">
                    <img src="https://cdn.wallpapersafari.com/83/40/jaAGOk.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                    <p>Natural and Social sciences</p>

                </div>
            </a>
        </div>

        <br />

</body>

@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}