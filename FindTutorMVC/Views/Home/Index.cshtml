@{
    ViewBag.Title = "Home Page";
}

<style>
    .carousel-inner img {
        width: 100%;
        min-height: 200px;
    }

    @@media (max-width: 600px) {
        .carousel-caption {
            display: none;
        }
    }
</style>

<body>


    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="https://c1.sfdcstatic.com/content/dam/blogs/ca/Blog%20Posts/sales-and-tech-open-graph.jpg" alt="Image">
                <div class="carousel-caption">
                    <h1>FindTutor</h1>
                    <p>Money Money.</p>
                </div>
            </div>

            <div class="item">
                <img src="https://c1.sfdcstatic.com/content/dam/blogs/ca/Blog%20Posts/How-to-Get-Started-in-Sales_open-graph.jpg" alt="Image">
                <div class="carousel-caption">
                    <h1>FindTutor</h1>
                    <p>Lorem ipsum...</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container text-center">
        <h3>What We Do</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <img src="https://loveearthwec.org/wp-content/uploads/2018/06/ARTStyles.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                <p>Arts</p>
            </div>
            <div class="col-sm-4">
                <img src="https://wallpaperaccess.com/full/1260521.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                <p>Languages</p>
            </div>
            <div class="col-sm-4">
                <img src="https://miro.medium.com/max/7296/1*deC-mkFzjrzBPL5qEnx-FA.jpeg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                <p>Maths</p>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <img src="https://wallpaperaccess.com/full/1428481.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                <p>Computer Science</p>
            </div>
            <div class="col-sm-4">
                <img src="https://www.mural-wallpaper.com/wp-content/uploads/2019/06/A-M25.jpeg" class="img-responsive" style="width:100%;height:245px"  alt="Image">
                <p>Music</p>
            </div>
            <div class="col-sm-4">
                <img src="https://cdn.wallpapersafari.com/83/40/jaAGOk.jpg" class="img-responsive" style="width:100%;height:245px" alt="Image">
                <p>Natural and Social sciences</p>

            </div>

        </div>

        <br />

</body>

@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}