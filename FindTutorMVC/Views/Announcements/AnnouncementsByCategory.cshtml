@model IEnumerable<FindTutorMVC.Models.Announcement>
@using Microsoft.AspNet.Identity
@using FindTutorMVC.Models

@{
    ViewBag.Title = "Index";
}

<h3>List of all existing and available announcements</h3>
<br />
@if (User.IsInRole("Admin") || User.IsInRole("Tutor"))
{
    <p>
        @Html.ActionLink("Create new announcement", "Create")
    </p>
}
<br />
<table class="table" id="announcementsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutor.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difficulty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                    @if (User.IsInRole("Admin") || User.IsInRole("Customer"))
                    {
                        @Html.ActionLink("Add to favourites", "AddAnnouncementToFavourites", new { id = User.Identity.GetUserId(), announcement = item.Id })
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("Tutor"))
                    {
                        using (ApplicationDbContext db = new ApplicationDbContext())
                        {
                            Announcement currentAnnouncement = db.Announcements.Find(item.Id);
                            ApplicationUser currentTutor = db.Users.Find(User.Identity.GetUserId());

                            if (User.IsInRole("Admin") || currentAnnouncement.Tutor == currentTutor)
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                <button data-id="@item.Id" class="btn btn-link js-delete">Delete</button>
                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



@section scripts{
    <script>
        var table = $("#announcementsTable").DataTable();
        $(".js-delete").on("click", function () {
            var button = $(this);
            bootbox.confirm("Do you want to delete this item?", function (result) {
                if (result) {
                    $.ajax({
                        method: "POST",
                        url: "/Announcements/DeleteConfirmed/" + button.attr("data-id"),
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }
                    });
                }
            })
        });
    </script>
}
